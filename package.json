{
  "name": "local-web-server",
  "displayName": "Local Web Server",
  "icon": "media/AI.svg",
  "description": "Open a specified local web server in VSCode",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:local-web-server.open",
    "onCommand:local-web-server.configure",
    "onCommand:local-web-server.configureTitle",
    "onView:local-web-server-sidebar"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "local-web-server.open",
        "title": "Open Local Web Server"
      },
      {
        "command": "local-web-server.configure",
        "title": "Configure Local Web Server URL"
      },
      {
        "command": "local-web-server.configureTitle",
        "title": "Configure WebView Title"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "local-web-server-explorer",
          "title": "Local Web Server",
          "icon": "media/AI.svg"
        }
      ]
    },
    "views": {
      "local-web-server-explorer": [
        {
          "id": "local-web-server-sidebar",
          "name": "Local Web Server"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Local Web Server Configuration",
      "properties": {
        "local-web-server.url": {
          "type": "string",
          "default": "http://127.0.0.1:8888",
          "description": "URL of the local web server to open"
        },
        "local-web-server.title": {
          "type": "string",
          "default": "Local Web Server",
          "description": "Title of the WebView panel"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.50.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1"
  }
}
